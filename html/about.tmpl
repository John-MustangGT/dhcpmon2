<script>
  $(document).ready(function() {
    // Load version information
    loadVersionInfo();
  });

  function loadVersionInfo() {
    // Try to get version info from the server
    $.ajax({
      url: '/?api=version',
      type: 'GET',
      dataType: 'json',
      success: function(response) {
        if (response.version) {
          $('#app-version').text(response.version);
        }
        if (response.buildTime) {
          $('#build-time').text(new Date(response.buildTime).toLocaleDateString());
        }
        if (response.gitHash) {
          $('#app-version').text(response.version + ' (' + response.gitHash.substring(0, 7) + ')');
        }
      },
      error: function() {
        // Fallback to showing build info from global variables if available
        if (typeof window.buildInfo !== 'undefined') {
          $('#app-version').text(window.buildInfo.version || 'Unknown');
          $('#build-time').text(window.buildInfo.buildTime || 'Unknown');
        } else {
          $('#app-version').text('Development');
          $('#build-time').text('Unknown');
        }
      }
    });
  }
</script>

